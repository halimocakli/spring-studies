<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Dependencies -->
    <bean id="databaseUserProvider" class="com.example.dependencyInjection.looseCouplingWithConstructorInjection.DatabaseUserProvider">
        <property name="id" value="1910206523"/>
        <property name="name" value="Halim Can"/>
        <property name="surname" value="Ocaklı"/>
    </bean>

    <bean id="noSqlDbUserProvider" class="com.example.dependencyInjection.looseCouplingWithConstructorInjection.NoSqlDbUserProvider">
        <property name="id" value="1310206512"/>
        <property name="name" value="Raziye"/>
        <property name="surname" value="Dogan"/>
    </bean>

    <bean id="webServiceDataProvider" class="com.example.dependencyInjection.looseCouplingWithConstructorInjection.WebServiceDataProvider">
        <property name="id" value="1410206532"/>
        <property name="name" value="Oğuzhan"/>
        <property name="surname" value="Deniz"/>
    </bean>
    <!---->

    <!-- Dependency Constructor Injection-->
    <bean id="userManagerWithDbUserProvider" class="com.example.dependencyInjection.looseCouplingWithConstructorInjection.UserManager">
        <constructor-arg ref="databaseUserProvider"/>
    </bean>

    <bean id="userManagerWithNoSqlDbUserProvider" class="com.example.dependencyInjection.looseCouplingWithConstructorInjection.UserManager">
        <constructor-arg ref="noSqlDbUserProvider"/>
    </bean>

    <bean id="userManagerWithWebServiceDataProvider" class="com.example.dependencyInjection.looseCouplingWithConstructorInjection.UserManager">
        <constructor-arg ref="webServiceDataProvider"/>
    </bean>
    <!---->
</beans>